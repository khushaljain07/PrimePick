extends layout/main_layout
block styles
    link(rel="stylesheet", href="/css/main.css")
    link(rel="stylesheet",href="/css/product.css")
block contain
            main 
                if prods .length>0
                    .grid 
                        each product in prods
                            article.card.product-item 
                                header.card__header 
                                    h1.product__title #{product.title}
                                div.card__image
                                    img(src="", alt="")
                                .card__content 
                                    h2.product__price 19.00
                                    p.product__description A very interesting book about to many even more 
                                .card__actions 
                                    button.btn Add to cart
                else 
                    h1 No product
                